<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:weightSum="1"
    android:baselineAligned="false"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.03">

        <ImageView
            android:src="@mipmap/rebuilt_hochformat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView"
            android:rotation="0"
            android:scaleType="centerCrop"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_weight="0.03" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:text="Schwierigkeit:"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/textView6"
                android:background="@color/button_color"
                android:textAppearance="@android:style/TextAppearance"
                android:textColor="@color/colorTextMenu"
                android:textAlignment="textEnd"
                android:paddingRight="10dp"
                android:gravity="center_vertical" />

            <RadioButton
                android:text="Schwer"
                android:layout_width="match_parent"
                android:id="@+id/radioButton"
                android:background="@color/button_color2"
                android:textAppearance="@android:style/TextAppearance"
                android:fontFamily="sans-serif"
                android:typeface="normal"
                android:textColor="@color/colorTextMenu"
                android:layout_height="30dp" />

            <RadioButton
                android:text="Einfach"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/radioButton2"
                android:background="@color/button_color2"
                android:textAppearance="@android:style/TextAppearance"
                android:textColor="@color/colorTextMenu" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_alignRight="@+id/switch1"
                android:layout_alignLeft="@+id/switch1">

                <TextView
                    android:text="Spieler:"
                    android:id="@+id/player"
                    android:textAppearance="@android:style/TextAppearance"
                    android:background="@color/button_color"
                    android:layout_height="30dp"
                    android:gravity="fill_vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:textColor="@color/colorTextMenu"
                    android:layout_alignBaseline="@+id/name"
                    android:layout_alignBottom="@+id/name"
                    android:layout_alignLeft="@+id/linearLayout2"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/name"
                    android:editable="true"
                    android:textAppearance="@android:style/TextAppearance"
                    android:autoText="false"
                    android:hint="Dein Name..."
                    android:background="@color/button_color"
                    android:layout_height="30dp"
                    android:gravity="fill_vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:textColorHint="@color/colorTextMenu_hint"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/button6"
                    android:layout_marginTop="10dp" />
            </LinearLayout>

        </LinearLayout>

        <Button
          android:text="Spielstand zurücksetzen"
          android:layout_height="wrap_content"
          android:id="@+id/button4"
          android:layout_width="200dp"
          android:padding="5dp"
            android:drawableLeft="@android:drawable/ic_menu_revert"
          style="@android:style/Widget.Button.Inset"
          android:textAppearance="@android:style/TextAppearance"
          android:layout_weight="0.03"
            android:background="@color/button_color"
            android:shadowDx="0"
            android:shadowDy="0"
            android:layout_marginBottom="92dp"
            android:textColor="@color/colorTextMenu"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:text="zurück"
            android:layout_height="30dp"
            android:id="@+id/button6"
            android:drawableLeft="?android:attr/floatingToolbarCloseDrawable"
            android:background="@color/button_color"
            android:layout_weight="0.03"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:textAppearance="@android:style/TextAppearance"
            android:textColor="@color/colorTextMenu"
            android:layout_width="90dp"
            android:padding="5dp"
            android:layout_margin="10dp" />


    </RelativeLayout>

